include ../navigation/navigation

mixin header()

	+b.HEADER.header
		+e.IMG.image(src="images/shapes-hero.svg" alt="image")
		.corner
			img(src="images/corner.png" alt="Corner")
		+navigation
		.container
			.row
				.col-md-8.col-md-offset-2
					h1.text-center Blockchain rewards and loyalty platform
					+e.P.description.text-center Shoppers are rewarded for purchases with cryptocurrency instead of loyalty points.
					button.button.header-button.hidden-sm.hidden-xs(data-toggle="modal" data-target="#tuned") Stay Tuned!
						span
					button.button.button-nav.hidden-md.hidden-lg.hidden-sm WHITEPAPER
						span
					+b.social.UL
						+e.LI.social-item
							a(class="icon-telegram" href="#" target="_blank")
						+e.LI.social-item
							a(class="icon-bitcoin" href="#" target="_blank")
						+e.LI.social-item
							a(class="icon-facebook" href="#" target="_blank")
						+e.LI.social-item
							a(class="icon-twitter" href="#" target="_blank")
						+e.LI.social-item
							a(class="icon-linkedin" href="#" target="_blank")
					button.button.header-button.hidden-md.hidden-lg(data-toggle="modal" data-target="#tuned") Stay Tuned!
						span
